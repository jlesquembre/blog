## -*- coding: utf-8 -*-

<%def name="html_pager()">

%if prevlink or nextlink:

<div>
    <ul class="pager">

        %if prevlink:
        <li class="previous">
            <a href="${prevlink}"> ← Newer posts</a>
        </li>
        %endif

        %if nextlink:
        <li class="next">
            <a href="${nextlink}">Older posts → </a>
        </li>
        %endif

    </ul>
</div>

%endif

</%def>
